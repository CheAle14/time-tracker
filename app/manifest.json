{
    "name": "Video Time Tracker",
    "description": "Tracks the time watched of videos, synced across devices",
    "version": "2.0.0",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webNavigation",
        "alarms",
        "contextMenus"
    ],
    "manifest_version": 3,
    "action": {"default_title": "Video Tracker"},
    "content_scripts": [
        {
            "matches": [
                "https://youtube.com/*",
                "https://*.youtube.com/*"
            ],
            "js": ["toast/toast.js", "scripts/classes.js", "scripts/contentScript.js"],
            "css": ["toast/toast.css"]
        },
        {
            "matches": [
                "https://reddit.com/*",
                "https://*.reddit.com/*"
            ],
            "js": ["tinycolor/tinycolor.js", "toast/toast.js", "scripts/classes.js", "scripts/reddit/reddit.js"],
            "css": ["reddit.css", "toast/toast.css"]
        }
    ],
    "background": {
        "service_worker": "worker.js",
        "type": "module"
    }
}